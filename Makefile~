.PHONY: all clean resources

all: resources/recursive.pdf

resources: ## Create resources directory
	mkdir -p $@

resources/recursive.pdf: resources ## Download McCarthy's original paper
	wget -O $@ https://www-formal.stanford.edu/jmc/recursive.pdf

src:
	mkdir -p $@

examples:
	mkdir -p $@

tests:
	mkdir -p $@

docs:
	mkdir -p $@

setup: src examples tests docs resources/recursive.pdf ## Setup the project structure and download the paper

clean: ## Clean the resources
	rm -rf resources/*.pdf

help: ## Show this help menu
	@echo 'Usage: make [TARGET]'
	@echo ''
	@echo 'TARGETS:'
	@grep -E '^[a-zA-Z_-]+:.*?## .*$$' $(MAKEFILE_LIST) | sort | awk 'BEGIN {FS = ":.*?## "}; {printf "\033[36m%-20s\033[0m %s\n", $$1, $$2}'
